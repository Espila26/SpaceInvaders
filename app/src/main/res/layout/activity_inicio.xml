<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="una.ac.cr.spaceinvaders.Inicio"
    android:background="@drawable/inicio">


    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="@string/titulo"
        android:gravity="center"
        android:textColor="@color/gris"
        android:textSize="42dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/buttonInicio"
        android:layout_width="195dp"
        android:layout_height="111dp"
        android:textSize="19dp"
        android:background="@drawable/border"
        android:text="@string/botonInicio"
        android:textColor="@color/gris"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="Iniciar"/>

    <Button
        android:id="@+id/buttonFinal"
        android:layout_width="195dp"
        android:layout_height="111dp"
        android:textSize="19dp"
        android:background="@drawable/border"
        android:text="@string/botonFinal"
        android:textColor="@color/gris"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="Tabla"/>

</android.support.constraint.ConstraintLayout>
